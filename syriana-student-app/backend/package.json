{
  "name": "syriana-student-app-server",
  "version": "1.0.0",
  "description": "Backend API for Syriana Student Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon -r dotenv/config server.js",
    "create-admin": "node scripts/create-admin.js",
    "setup-admin": "node scripts/setup-admin.js",
    "create-sample-grades": "node scripts/create-sample-grades.js",
    "test": "jest --runInBand --passWithNoTests"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "student-management",
    "api"
  ],
  "author": "Hesham Al Dandan",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": ["**/*.test.js"],
    "testTimeout": 10000
  }
}
